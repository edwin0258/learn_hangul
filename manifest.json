{
  "manifest_version": 2,
  
  "name": "Basic Hangul Learning Extension",
  "description": "For learning purposes..",
  "version": "1.0",
  
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Learn Hangul!"
  },
  "icons": {
     "16": "korean16.png",
     "48": "korean48.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.min.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}