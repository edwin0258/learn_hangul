{
  "manifest_version": 2,
  
  "name": "Basic Hangul Learning Extension",
  "description": "For learning purposes..",
  "version": "1.0",
  
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Learn Hangul!",
    "default_icon": "korean.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.min.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}